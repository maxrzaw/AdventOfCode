    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node file example.txt",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}",
                "${relativeFileDirname}/example.txt"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "ts-node file input.txt",
            "type": "node",
            "request": "launch",
            "args": [
                "${relativeFile}",
                "${relativeFileDirname}/input.txt"
            ],
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
